
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


    weblogbook.Models.SDEntities sddb = new weblogbook.Models.SDEntities();

    var followerCount = 0;
    var articleCount = 0;
    var fullname = "fullname it is";
    var username = "@username";
}

<h1 class="mt-3 ">People to follow</h1>









<div class="album py-5 bg-transparent">
    <div class="row ">

        @foreach (var i in sddb.Articles)
        {
            <div class="col-md-3 m-1 mt-3">
                <div class="d-flex rounded" style=" background-color: darkseagreen; opacity:.4; padding:10px 5px 10px 5px;">
                    <div class="flex-grow-1 ms-3">
                        <h5 class="mb-1">@fullname</h5>
                        <p class="mb-2 pb-1" style="color: #2b2a2a;">@username</p>
                        <div class="d-flex justify-content-start rounded-3 p-2 mb-2">
                            <div>
                                <p class="small text-muted mb-1">Articles</p>
                                <p class="mb-0">@articleCount</p>
                            </div>
                            <div class="px-3">
                                <p class="small text-muted mb-1">Followers</p>
                                <p class="mb-0">@followerCount</p>
                            </div>

                        </div>
                        <div class="d-flex pt-1">
                            <button type="button" class="btn btn-primary flex-grow-1">Follow</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



















