
@{
    ViewBag.Title = "Feed";
    if (Session["user"] != null)
    { <!--h2>Feed, hi Session["user"]</!--h2-->

    <h4>Create New Post</h4>
    @RenderPage("_CreatePostPartialView.cshtml");

    //  Response.Redirect("~/Door/Index");










    // weblogbook.Models.WeblogDBEntities1 db = new weblogbook.Models.WeblogDBEntities1();
    weblogbook.Models.SDEntities sddb = new weblogbook.Models.SDEntities();








    <div class="album py-5 bg-transparent text-white">
        <div class="container">

            <div class="row">
                @foreach (var i in sddb.Articles)
                {

                    <div class="col-md-4" >
                        <div class="card mb-4 box-shadow bg-transparent text-white">
                            <img class="card-img-top" onerror="this.src = '';" display: block;" src="@i.image" data-holder-rendered="true">
                            <div class="card-body">
                                <h4 class="card-title">@i.title</h4>
                                <p class="card-text">@i.articleBody</p>
                                <div class="d-flex justify-content-between align-items-center">

                                    @{TimeSpan ts = ((DateTime.Now - (DateTime)i.createdAt));
                                    }
                                    <small class="text-muted"> @string.Format("{0:%d}d {0:%h}h {0:%m}min {0:%s}sec", ts)</small>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>





}
else
{
    ViewBag.Title = "logged out";
}


















